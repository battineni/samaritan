<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Register</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%# f.input :username, label: 'Your username please' %>
      <%# f.input :password, hint: 'No special characters.' %>
      <%# f.input :email, placeholder: 'user@domain.com' %>
      <%# f.input :remember_me, inline_label: 'Yes, remember me' %>
      <%# f.button :submit %>
      <%= f.label :username %>
      <%= f.text_field :username, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :email, class: 'form-control', placeholder: 'user@domain.com' %>
    </div>
    <div class="form-group">
      <%= f.input :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, class: 'form-control' %>
    </div>
     <%= f.submit 'Join now', :class => 'button tiny right' %>
  <% end %>
</div>
