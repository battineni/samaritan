<%= simple_form_for(@event) do |f| %>
        <%= f.error_notification %>
  <section class="row">
    <div class="medium-6 large-4 columns panel">
    <%# Event Form Elements %>
        <div class="form-inputs">
            <%= f.input :event_name, label:'Event Name',error: 'Event name is mandatory, please specify one' %>
            <%= f.label :Event_Type %>
            <%= f.select :event_type,["Nightclub","Festival","Special"], prompt: "Choose Event Type" %>
            <%= f.input :age_limit %>
            <%= f.label :start_date %>
           <%= date_select("event","start_date",:order => [:year, :month, :day],:start_year => 2016,
                        :prompt => {:year => 'Select year',
                                    :month => 'Select month',
                                    :day => 'Select day',
                                    :hour => 'Select hour',
                                    :minute => 'Select Minute'}) %>
           <%= f.label :end_date %>
           <%= date_select("event","end_date",
                           :prompt => {:year => 'Select year',
                                       :month => 'Select month',
                                       :day => 'Select day'
                                       }) %>
        </div>
    </div>
    <div class="small-6 large-4 columns">
      <%# Band form Elements %>
      <div class="form-inputs panel radius">
        <%= f.label "Artists" %><br />
        <%= f.collection_check_boxes :band_ids, Band.all, :id, :name do |b| %>
          <div class="collection-check-box">
            <%= b.check_box %>
            <%= b.label %>
          </div>
        <% end %>
      </div>
    </div>
      <div class="small-4 large-4 columns">
      <%# Organizer Form Elements %>
             <div class="form-inputs panel radius">
                <%= f.label "Organizers" %><br />
                <%= f.collection_check_boxes :organizer_ids, Organizer.all, :id, :name do |b| %>
                <div class="collection-check-box">
                    <%= b.check_box %>
                    <%= b.label %>
                </div>
                <% end %>
              </div>
      </div>
          <div class="small-4 large-4 columns">
            <%# Genre Form Elements %>
            <div class="form-inputs panel radius">
              <%= f.label "Genre" %><br />
              <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name do |b| %>
                <div class="collection-check-box">
                  <%= b.check_box %>
                  <%= b.label %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="small-4 large-4 columns">
            <%# Venue Form Elements %>
            <div class="form-inputs panel radius">
              <%= f.label "Choose Your Venue or Add One"%><br />
              <%= f.collection_select :venue_id, Venue.all, :id, :name, prompt: true %>
              <%= link_to 'Add Venue', new_venue_path %>
            </div>
          </div>
    </section>
    <%# Submit %>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>

    <% end %>
