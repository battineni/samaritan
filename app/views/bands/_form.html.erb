<%= simple_form_for(@band) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :bio %>
    <%= f.input :act %>
    <%= f.input :hometown %>
    <%= f.input :country %>
    <%= f.input :active_since %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
